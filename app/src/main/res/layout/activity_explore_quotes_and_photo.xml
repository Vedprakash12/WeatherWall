<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    tools:context=".Activity.ExploreQuotesAndPhoto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="#FFFFFF"
        android:id="@+id/appBarQuotes"
        android:layout_height="320dp">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/collapsing_toolbarQuotes"
            android:background="#FFF"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UnusedAttribute"
                android:id="@+id/roundQuotesImg"
                android:transitionName="imgData"

                app:layout_collapseMode="parallax"
                app:riv_corner_radius_bottom_left="160dp"
                app:riv_corner_radius_bottom_right="160dp"
                app:riv_mutate_background="true"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:id="@+id/headerContentQuotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin">



                <ImageView
                    android:id="@+id/backQuotes"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <RelativeLayout
                    android:id="@+id/ratBarQuotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/minibackground"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ImgName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="10dp"
                        android:transitionName="text"
                        android:ellipsize="end"
                        android:fontFamily="@font/cagliostro"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="32sp"
                        android:textStyle="normal" />
                </RelativeLayout>


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolBarQuotes"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:elevation="5dp"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:background="#FFFFFF">

                <RelativeLayout
                    android:id="@+id/title_appbarQuotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin">


                    <ImageView
                        android:id="@+id/back9QuotesData"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_arrow_back" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvQuotesMain"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/cagliostro"
                        android:layout_toRightOf="@+id/back9QuotesData"
                        android:textColor="#050505"
                        android:textSize="30sp"
                        android:textStyle="normal" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="25dp"
            app:cardCornerRadius="25dp"
            android:padding="12dp"
            android:id="@+id/cardViewQuotes"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotes Of the Day"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/quotesHeading"
                    android:fontFamily="@font/just_me_again_down_here"
                    android:textSize="42sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/QuotesTextData"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/cagliostro"
                    android:layout_below="@+id/quotesHeading"
                    />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/Imgrecylerview"
            android:layout_below="@+id/cardViewQuotes"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content"/>
    </RelativeLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>