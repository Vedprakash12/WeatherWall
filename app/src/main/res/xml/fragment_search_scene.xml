<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/materialtoolBar"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <Constraint
           android:id="@+id/horizontalScrollViewList"
            app:layout_constraintTop_toBottomOf="@+id/materialtoolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Constraint android:id="@+id/recylerViewSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/expanded">
        <Constraint android:id="@id/materialtoolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Constraint android:id="@+id/recylerViewSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <Constraint
            android:id="@+id/horizontalScrollViewList"
            app:layout_constraintTop_toBottomOf="@+id/materialtoolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@+id/expanded">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="30"
                app:motionTarget="@id/materialtoolBar">
                <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="50" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="15"
                app:motionTarget="@id/materialtoolBar">
                <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="0" />
            </KeyAttribute>
        </KeyFrameSet>

        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="autoCompleteToStart"
            app:touchAnchorId="@id/recylerViewSearch"
            app:touchAnchorSide="top" />

    </Transition>
</MotionScene>
